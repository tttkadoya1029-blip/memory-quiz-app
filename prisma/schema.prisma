// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Question {
  id            String   @id @default(cuid())
  prompt        String
  imageUrl      String?  // 画像URL（nullableで画像なし問題も対応）
  choiceA       String
  choiceB       String
  choiceC       String
  choiceD       String
  correctChoice String   // "A" | "B" | "C" | "D"
  explanation   String?
  rarity        String   @default("common") // "common" | "rare" | "epic" | "legendary"
  createdAt     DateTime @default(now())

  userState  UserQuestionState?
  answerLogs AnswerLog[]
}

model UserQuestionState {
  id             String    @id @default(cuid())
  questionId     String    @unique
  question       Question  @relation(fields: [questionId], references: [id])
  status         String    @default("new") // "new" | "learning" | "review"
  step           Int       @default(0)
  lastAnsweredAt DateTime?
  nextDueAt      DateTime?
  correctCount   Int       @default(0)
  wrongCount     Int       @default(0)
  streak         Int       @default(0)
  lastFeeling    String?   // "hard" | "normal" | "easy"
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model AnswerLog {
  id                       String   @id @default(cuid())
  questionId               String
  question                 Question @relation(fields: [questionId], references: [id])
  answeredAt               DateTime @default(now())
  selectedChoice           String   // "A" | "B" | "C" | "D"
  isCorrect                Boolean
  feeling                  String   // "hard" | "normal" | "easy"
  scheduledIntervalMinutes Int
}

// ===== Duel Mode Models =====

model PlayerStats {
  id         String   @id @default(cuid())
  level      Int      @default(1)
  exp        Int      @default(0)
  coins      Int      @default(0)
  totalWins  Int      @default(0)
  totalGames Int      @default(0)
  maxCombo   Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  battleResults BattleResult[]
}

model BattleResult {
  id            String   @id @default(cuid())
  playerStatsId String?
  playerStats   PlayerStats? @relation(fields: [playerStatsId], references: [id])

  totalQuestions Int
  correctCount   Int
  wrongCount     Int
  maxCombo       Int
  rank           String   // "S" | "A" | "B" | "C" | "F"
  earnedExp      Int
  earnedCoins    Int
  playerHpLeft   Int
  enemyHpLeft    Int
  isVictory      Boolean

  createdAt      DateTime @default(now())
}

// ===== Daily Mission Models =====

model DailyMission {
  id          String   @id @default(cuid())
  type        String   // "win_streak" | "correct_answers" | "combo"
  targetValue Int      // 目標値 (3連勝なら3, 20問正解なら20)
  rewardCoins Int
  rewardBadge String?  // バッジID (nullable)
  description String
  createdAt   DateTime @default(now())

  progress MissionProgress[]
}

model MissionProgress {
  id           String   @id @default(cuid())
  missionId    String
  mission      DailyMission @relation(fields: [missionId], references: [id])
  date         String   // "YYYY-MM-DD" 形式
  currentValue Int      @default(0)
  isCompleted  Boolean  @default(false)
  isClaimed    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([missionId, date])
}

model Badge {
  id          String   @id @default(cuid())
  name        String
  description String
  iconEmoji   String
  rarity      String   // "common" | "rare" | "epic" | "legendary"
  createdAt   DateTime @default(now())

  earnedBadges EarnedBadge[]
}

model EarnedBadge {
  id        String   @id @default(cuid())
  badgeId   String
  badge     Badge    @relation(fields: [badgeId], references: [id])
  earnedAt  DateTime @default(now())

  @@unique([badgeId])
}

// ===== Login Streak Models =====

model LoginStreak {
  id              String   @id @default(cuid())
  currentStreak   Int      @default(0)
  maxStreak       Int      @default(0)
  lastLoginDate   String?  // "YYYY-MM-DD"
  weeklyStamps    String   @default("0000000") // 7文字: 0=未, 1=済
  weekStartDate   String?  // 週の開始日
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// ===== Gacha / Card Pack Models =====

model CardPack {
  id          String   @id @default(cuid())
  quantity    Int      @default(0)  // 未開封パック数
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
